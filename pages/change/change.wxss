.container {
  width: 100%;
  height: 100vh;
  display: flex;
  padding: 0px;
  flex-direction: column;
  justify-content: start;
}

.signInput {
  border: 1px solid rgba(217, 217, 217, 1);
  border-radius: 5px;
  width: 86%;
  height: 150rpx;
  padding: 20rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 14px;
  margin-top: 20rpx;
}

.confirmBtn {
  border: 1px solid rgba(255, 255, 255, 0);
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 5px;
  background-color: rgba(73, 191, 141, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 25rpx;
  margin-top: 30rpx;
  text-align: center;
}
.confirmGrayBtn {
  border: 1px solid rgba(255, 255, 255, 0);
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 5px;
  background-color: rgba(217, 217, 217, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 25rpx;
  margin-top: 30rpx;
  text-align: center;
}
