.container{
  width: 100%;
  height: 100vh;
  display: flex;
  padding: 0px;
  flex-direction: column;
}
.scrollContain{
  width: 100%;
  height: 1rpx;
  flex: 1;
  margin-bottom: 10vh;
}
.topContain{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.userImage{
  width: 80rpx;
  height: 80rpx;
  margin-left: 30rpx;
  border-radius: 40rpx;
}
.userName{
  font-size: 25rpx;
  color: rgba(102, 102, 102, 1);
  margin-left: 20rpx;
}
.likeBtn{
  position: absolute;
  right: 30rpx;
  width: 260rpx;
  height: 60rpx;
  text-align: center;
  border: 1px solid rgba(73, 191, 141, 1);
  color: rgba(73, 191, 141, 1);
  border-radius: 30rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.imageSwiper{
  width: 100%;
  margin-top: 30rpx;
  height: 70vh;
  position: absolute;
}
.swiperItem{
  display: flex;
  position: relative;
}
.swiperImage{
  width: 100%;
  height: 70vh;
}
.sayTitle{
  position: absolute;
  top: 30vh;
  border: 1px solid rgba(255, 255, 255, 0);
  background-color: rgba(255, 255, 255, 1);
  border-radius: 3px;
  margin-left: 10%;
  margin-right: 5%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  padding-top: 15rpx;
}
.titleText{
  display:-webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow:hidden;
  line-height: 45rpx;
}

.swiperContain{
  position: relative;
  
}
.pageText{
  width:10%;
  height:42rpx;
  line-height: 42rpx;
  position: absolute;
  z-index: 2;
  top: 68vh;
  text-align: center;
  font-size: 23rpx;
  background-color: rgba(70, 70, 70, 1);
  border: 1px solid rgba(255, 255, 255, 0);
  border-radius: 25rpx;
  color: white;
  opacity: 0.65;
  left: 45%;
}
.controlContain{
  width: 100%;
  height: 7%;
  position: absolute;
  bottom: 0rpx;
  border-radius: 15rpx 15rpx 0rpx 0rpx;
  background-color: #49BF8D;
  display: flex;
  align-items: center;
}
.shareImage{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 30rpx;
}
.likeImage{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 100rpx;
}
.line{
  width: 3rpx;
  height: 74rpx;
  position: absolute;
  right: 180rpx;
  background-color: #eeeeee;
}
.writeText{
  background-color: #49BF8D;
  color: white;
  position: absolute;
  left: 20%;
  font-size: 30rpx;
}
.writeBtn{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 34%;
}
.detailContent{
  position: absolute;
  top: 80vh;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 20rpx;
  font-size: 25rpx;
  color: rgba(91, 91, 91, 1);
  line-height: 40rpx;
}