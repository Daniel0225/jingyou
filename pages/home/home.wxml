    </view>

    <view class="historyContain">
      <text class="hotSearchLabel">历史搜索：</text>
      <text class="hotItem">湿疹</text>
    </view>
  </view>
  <view class="centerContain">
    <view class="oilType">
      <text>精油\n百科</text>
    </view>
    <text class="singleOil">单方精油</text>
    <text class="multyOil">复方精油</text>
