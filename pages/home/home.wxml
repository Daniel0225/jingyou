      <icon class="searchIcon" type="search"></icon>
      <input class="searchInput" bindtap="toSearch" disabled="true" placeholder="搜索精油用法或症状配方"></input>
    </view>

    <view class="hotContain">
      <text class="hotSearchLabel">热搜：</text>
