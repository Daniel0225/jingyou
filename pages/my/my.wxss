.container {
  width: 100%;
  height: 100vh;
  display: flex;
  padding: 0px;
  flex-direction: column;
  justify-content: start;
}

.topContain {
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row；;
}

.userHeader {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-left: 20rpx;
}

.topRight {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.topRightContain {
  width: 70%;
  display: flex;
  flex-direction: column;
}

.topItem {
  width: 40%;
  display: flex;
  text-align: center;
  flex-direction: column;
}

.topText1 {
  font-size: 35rpx;
  color: rgba(16, 16, 16, 1);
}

.topText2 {
  color: rgba(157, 157, 157, 1);
  font-size: 20rpx;
  margin-top: 10rpx;
}

.changeBtn {
  border-radius: 34px;
  background-color: rgba(255, 255, 255, 0);
  border: 1px solid rgba(74, 74, 74, 1);
  text-align: center;
  width: 98%;
  height: 50rpx;
  font-size: 22rpx;
  line-height: 50rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.sign {
  color: rgba(151, 151, 151, 1);
  font-size: 25rpx;
  width: 90%;
  text-align: left;
  margin-top: 20rpx;
}

.tabType {
  display: flex;
  flex-direction: row;
  align-self: center;
  margin-top: 20rpx;
}

.newTab {
  color: #101010;
  font-size: 25rpx;
  font-weight: 600;
  padding-bottom: 5rpx;
  border-bottom: 5rpx solid rgba(73, 191, 141, 1);
}

.hotTab {
  font-size: 25rpx;
  font-weight: 600;
  color: #b7b7b7;
}

.emptyView {
  width: 50rpx;
}

.gridContain {
  width: 98%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 20rpx;
  padding-left: 1%;
  padding-right: 1%;
  background: #f5f8fa;
}

.gridItem {
  width: 49.5%;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.itemImage {
  width: 100%;
  height: 450rpx;
}

.itemTitle {
  font-size: 25rpx;
  overflow: hidden;
  font-weight: 600;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.itemContain {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.itemHeadImage {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}

.userName {
  flex: 1;
  font-size: 25rpx;
  color: rgba(102, 102, 102, 1);
  text-align: left;
  margin-left: 10rpx;
}

.likeNum {
  font-size: 20rpx;
  color: rgba(174, 174, 174, 1);
  margin-right: 10rpx;
}

.likeImage {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.infoItem {
  width: 100%;
  background-color: white;
  display: flex;
  padding: 20rpx;
  margin-bottom: 10rpx;
  flex-direction: row；;
}

.listContain {
  background-color: #f5f8fa;
  width: 100%;
  padding-top: 20rpx;
}

.infoItemImage {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
}

.infoItemTitle {
  color: rgba(16, 16, 16, 1);
  margin-left: 20rpx;
  font-size: 25rpx;
}

.infoItemType {
  font-size: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0);
  background-color: rgba(73, 191, 141, 1);
  color: rgba(255, 255, 255, 1);
  border-radius: 3px;
  padding-left: 5rpx;
  padding-right: 5rpx;
  margin-left: 20rpx;
}
.tagContain{
  margin-left: 20rpx;
  flex-wrap: wrap;
  display: flex;
  align-content: flex-start;
}
.tagView{
  border: 1px solid rgba(133, 151, 187, 1);
  border-radius: 3px;
  background-color: rgba(255, 255, 255, 0);
  color: rgba(133, 151, 187, 1);
  font-size: 20rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
  margin-right: 10rpx;
  margin-top: 15rpx;
}
