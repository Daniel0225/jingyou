.container {
  width: 100%;
  height: 100%;
  display: flex;
  padding: 0px;
  flex-direction: column;
}

.searchContain{
  width: 95%;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
  height: 50rpx;
  padding-bottom: 15rpx;
}
.searchInput{
  background: white;
  height: 70rpx;
  font-size: 25rpx;
  border: 1px solid rgba(73, 191, 141, 1);
  border-radius: 35rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  color: #717171;
}

.resultContain{
  margin-top: 30rpx;
  width: 90%;
}
.resultItem{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: space-between;
}
.resultItemText{
  color: rgba(0, 0, 0, 1);
  font-size: 14px;
  height: 80rpx;
  line-height: 80rpx;
}
.tagView{
  height: 50rpx;
  margin-top: 15rpx;
  line-height: 50rpx;
  border: 1px solid rgba(255, 255, 255, 0);
  border-radius: 15px;
  background-color: rgba(242, 242, 242, 1);
  color: rgba(61, 61, 61, 1);
  font-size: 12px;
  text-align: center;
  padding-left: 40rpx;
  padding-right: 40rpx;
}
.line{
  width: 100%;
  height: 1rpx;
  background-color:  rgba(247, 247, 247, 1);
}
.hotContain{
  width: 90%;
  flex-wrap: wrap;
  display: flex;
  align-content: flex-start;
  flex-direction: row;
  margin-top: 20rpx;
  padding-left: 20rpx;
}
.hotSearchLabel{
  font-size: 25rpx;
  color: #959595;
  font-style: bold;
  margin-top: 22rpx;
}
.hotItem{
  background-color:rgba(221, 221, 221, 0.3);
  font-size: 23rpx;
  color: #959595;
  font-style: bold;
  margin-right: 20rpx;
  border-radius: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  margin-top: 20rpx;
}
.historyContain{
  width: 90%;
  flex-direction: row;
  margin-top: 20rpx;
  padding-left: 20rpx;
}
.infoItem {
  width: 100%;
  background-color: white;
  display: flex;
  padding: 20rpx;
  margin-bottom: 10rpx;
  flex-direction: row；;
}
.infoItemImage {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
}
.topRightContain {
  width: 70%;
  display: flex;
  flex-direction: column;
}
.topContain {
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row；;
}
.infoItemTitle {
  color: rgba(16, 16, 16, 1);
  margin-left: 20rpx;
  font-size: 25rpx;
}
.infoItemType {
  font-size: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0);
  background-color: rgba(73, 191, 141, 1);
  color: rgba(255, 255, 255, 1);
  border-radius: 3px;
  padding-left: 5rpx;
  padding-right: 5rpx;
  margin-left: 20rpx;
}
.tagContain{
  margin-left: 20rpx;
  flex-wrap: wrap;
  display: flex;
  align-content: flex-start;
}
.oilTagView{
  padding-bottom: 5rpx;
  border: 1px solid rgba(133, 151, 187, 1);
  border-radius: 3px;
  background-color: rgba(255, 255, 255, 0);
  color: rgba(133, 151, 187, 1);
  font-size: 20rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
  margin-right: 10rpx;
  margin-top: 15rpx;
}
.listContain {
  margin-top: 30rpx;
  background-color: #f5f8fa;
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
}