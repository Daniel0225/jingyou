.container {
  width: 100%;
  height: 100%;
  display: flex;
  padding: 0px;
  flex-direction: column;
}

.searchContain {
  width: 95%;
  position: relative;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
  height: 50rpx;
}

.searchInput {
  background: white;
  height: 70rpx;
  font-size: 25rpx;
  border: 1px solid rgba(73, 191, 141, 1);
  border-radius: 35rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  color: #717171;
}

.searchIcon {
  position: absolute;
  right: 20rpx;
  height: 60rpx;
  top: 10rpx;
}

.resultContain {
  margin-top: 30rpx;
  width: 90%;
}

.resultItem {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  vertical-align: center;
  align-content: center;
  align-items: center;
}

.resultItemText {
  color: rgba(0, 0, 0, 1);
  font-size: 25rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.tagView {
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid rgba(255, 255, 255, 0);
  border-radius: 15px;
  background-color: rgba(242, 242, 242, 1);
  color: rgba(61, 61, 61, 1);
  font-size: 20rpx;
  text-align: center;
  padding-left: 35rpx;
  padding-right: 35rpx;
  margin-left: 20rpx;
}

.line {
  width: 100%;
  height: 1rpx;
  background-color: rgba(247, 247, 247, 1);
}

.addBtn {
  position: absolute;
  right: 30rpx;
  width: 130rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 5px;
  color: rgba(73, 191, 141, 1);
  font-size: 22rpx;
  text-align: center;
  font-family: Arial;
  border: 1px solid rgba(73, 191, 141, 1);
}
.addBtn2 {
  position: absolute;
  right: 30rpx;
  width: 130rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 5px;
  color: rgba(255, 255, 255, 1);
  background-color: rgba(73, 191, 141, 1);
  font-size: 22rpx;
  text-align: center;
  border: 1px solid rgba(73, 191, 141, 1);
}

.dividerLine {
  width: 100%;
  height: 15rpx;
  margin-top: 50rpx;
  background-color: #f5f8fa;
}

.label {
  color: rgba(16, 16, 16, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
  width: 100%;
  text-align: left;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
