.container{
  width: 100%;
  height: 100%;
  display: flex;
  padding: 0px;
  flex-direction: column;
  align-items: flex-start;
}
.scrollContain{
  width: 100%;
  height: 100%;
}
.topInfoContain{
  background: #ffffff;
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
}
.baseInfoContain{
  display: flex;
  flex-direction: column;
}
.itemContain{
  display: flex;
  flex-direction: row;
  align-items: center
}
.header{
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  right: 30rpx;
  border-radius: 70rpx;
  box-shadow: 0rpx 5rpx 5rpx 5rpx rgba(85, 85, 85, 0.10);
}
.name{
  font-size: 45rpx;
  font-weight: 600;
}
.type{
  padding-left: 10rpx;
  padding-right: 10rpx;
  height: 35rpx;
  line-height: 35rpx;
  background-color: rgb(116, 151, 184);
  border-radius: 5rpx;
  font-size: 20rpx;
  margin-left: 20rpx;
  color: #ffffff;
}
.englishLabel{
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #a6a6a6
}
.englishName{
  margin-top: 10rpx;
  margin-left: 30rpx;
  font-size: 25rpx;
  color: #a6a6a6
}
.dividerLine{
  width: 100%;
  height: 1rpx;
  background-color: #eeeeee;
  margin-top: 10rpx;
}
.tagContain{
  width: 96%;
  margin-left: 2%;
  margin-right: 2%;
  padding-bottom: 20rpx;
  flex-wrap: wrap;
  display: flex;
  align-content: flex-start;
  
}
.tagView{
  font-size: 20rpx;
  border-radius: 20rpx;
  padding: 10rpx;
  color: white;
  margin-top: 20rpx;
  margin-right: 15rpx;
  background-color: rgb(116, 151, 184);
}
.mainDivider{
  width: 100%;
  height: 30rpx;
  background-color: #e6e6e6;
}
.controlContain{
  width: 98%;
  height: 80rpx;
  position: absolute;
  bottom: 10rpx;
  margin-left: 1%;
  margin-right: 1%;
  border-radius: 15rpx;
  background-color: #49BF8D;
  display: flex;
  align-items: center;
}
.shareImage{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 30rpx;
}
.likeImage{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 100rpx;
}
.line{
  width: 3rpx;
  height: 74rpx;
  position: absolute;
  right: 180rpx;
  background-color: #eeeeee;
}
.writeText{
  color: #ffffff;
  position: absolute;
  left: 40%;
}
.writeBtn{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 34%;
}