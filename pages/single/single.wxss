.container{
  width: 100%;
  height: 100vh;
  display: flex;
  padding: 0px;
  flex-direction: column;
}
.scrollContain{
  width: 100%;
  height: 1rpx;
  flex: 1;
  margin-bottom: 10vh;
}
.topInfoContain{
  background: #ffffff;
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
}
.baseInfoContain{
  display: flex;
  flex-direction: column;
}
.itemContain{
  display: flex;
  flex-direction: row;
  align-items: center
}
.header{
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  right: 30rpx;
  border-radius: 70rpx;
  box-shadow: 0rpx 5rpx 5rpx 5rpx rgba(85, 85, 85, 0.10);
}
.name{
  font-size: 45rpx;
  font-weight: 600;
}
.type{
  padding-left: 10rpx;
  padding-right: 10rpx;
  height: 35rpx;
  line-height: 35rpx;
  background-color: #8597BB;
  border-radius: 5rpx;
  font-size: 20rpx;
  margin-left: 20rpx;
  color: #ffffff;
}
.englishLabel{
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #a6a6a6
}
.englishName{
  margin-top: 10rpx;
  margin-left: 30rpx;
  font-size: 25rpx;
  color: #a6a6a6
}
.dividerLine{
  width: 100%;
  height: 1rpx;
  background-color: #eeeeee;
  margin-top: 10rpx;
}
.tagContain{
  width: 96%;
  margin-left: 2%;
  margin-right: 2%;
  padding-bottom: 20rpx;
  flex-wrap: wrap;
  display: flex;
  align-content: flex-start;
  
}
.tagView{
  font-size: 20rpx;
  border-radius: 25rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  color: white;
  margin-top: 20rpx;
  margin-right: 15rpx;
  background-color: #8597BB;
}
.mainDivider{
  width: 100%;
  height: 30rpx;
  background-color: #F5F8FA;
}
.tabBar{
  display: flex;
  flex-direction: row;
  width: 100%;
  padding-top: 15rpx;
  padding-left: 25rpx;
  margin-bottom: 20rpx;
}
.tabImage{
  width: 40rpx;
  height: 40rpx;
}
.tabText{
  margin-left: 10rpx;
  font-weight: 600;

}
.tabMoreImage{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
}
.oneContain{
  width: 100%;
  padding-left: 15rpx;
  padding-right: 20rpx;
  margin-bottom: 20rpx;
}
.chinaLabel{
  font-size: 25rpx;

}
.featureTag{
  border-radius: 22rpx;
  color: rgba(73, 191, 141, 1);
  font-size: 20rpx;
  text-align: center;
  font-family: Arial;
  padding-left: 15rpx;
  padding-right: 15rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border: 1rpx solid rgba(73, 191, 141, 1);
}
.featureLabel{
  display: flex;
  flex-wrap: wrap;
  font-size: 25rpx;
  padding-right: 80rpx;
  line-height: 40rpx;
}
.multyContain{
  display: flex;
  margin-top: 15rpx;
  flex-direction: row;
}
.multyTag{
  font-size: 23rpx;
  font-weight: 600;
  color: #49BF8D;
  border: 1px solid rgba(255, 255, 255, 0);
  background-color: rgba(212, 249, 233, 1);
  border-radius: 5px;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  margin-right: 20rpx;
}
.multyLabel{
  position: absolute;
  right: 20rpx;
  font-size: 25rpx;
  color: #A2A2A2;
}
.useContain{
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
}
.useItemContain{
  display: flex;
  flex-direction: row;
  border-radius: 10rpx;
  border: 1rpx solid rgba(234, 234, 234, 1);
  margin-left: 1%;
  margin-right: 1%;
  margin-bottom: 10rpx;
}
.useLabel{
  font-size: 25rpx;
  font-weight: 600;
  color: rgba(16, 16, 16, 1);
  width: 30%;
  text-align:start;
  padding: 30rpx;
  flex-wrap: wrap;
  display: flex;
  align-items: center;
}
.useContent{
  background-color: #F2F2F2;
  color: #555555;
  font-size: 25rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  width: 68%;
}
.warmImage{
  width: 30%;
  height: 220rpx;
  margin-left: 2.5%;
  marker-end: 2%;
}
.warmContain{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  padding-left: 30rpx;
}
.warmText{
  margin-left: 20rpx;
  font-size: 25rpx;
}
.moreContain{
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  background-color: #F7F7F7;
  border: 1rpx solid rgba(255, 255, 255, 1);
  margin-left: 2%;
  margin-right: 2%;
  margin-bottom: 10rpx;
  padding: 15rpx;
}
.moreTitle{
  color: #101010;
  font-size: 28rpx;

}
.moreContent{
  color: #737373;
  font-size: 25rpx;
  word-wrap: break-word;
  margin-top: 10rpx;
}
.multyItem{
  display: flex;
  flex-direction: row;
  width: 98%;
  margin-bottom: 12rpx;
  margin-right: 2%;
  border-radius: 84rpx 10rpx 10rpx 84rpx;
  height: 168rpx;
  box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(219, 219, 219, 1);
}
.multyImage{
  width: 152rpx;
  height: 152rpx;
  margin-top: 8rpx;
  margin-left: 8rpx;
  border-radius: 76rpx 76rpx 76rpx 76rpx;
  box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.4);
}
.multyCenter{
  display: flex;
  flex-direction: column;
  height: 168rpx;
  width: 67%;
  margin-left: 5%;
}
.multyTitle{
  display:-webkit-box;
  font-weight: 600;
  font-size: 25rpx;
  color: rgba(16, 16, 16, 1);
  margin-top: 15rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.multyContent{
  color: rgba(157, 157, 157, 1);
  font-size: 25rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 20rpx;
  line-height: 45rpx;
}
.rightImage{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  margin-top: 64rpx;
}
.controlContain{
  width: 100%;
  height: 7%;
  position: absolute;
  bottom: 0rpx;
  border-radius: 15rpx 15rpx 0rpx 0rpx;
  background-color: #49BF8D;
  display: flex;
  align-items: center;
}
.shareImage{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 30rpx;
}
.likeImage{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 100rpx;
}
.line{
  width: 3rpx;
  height: 74rpx;
  position: absolute;
  right: 180rpx;
  background-color: #eeeeee;
}
.writeText{
  color: #ffffff;
  position: absolute;
  left: 40%;
}
.writeBtn{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 34%;
}